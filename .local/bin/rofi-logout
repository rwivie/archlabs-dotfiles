#!/usr/bin/env bash

question=$(echo " lock| logout| reboot| shutdown" | rofi -sep "|" \
    -dmenu -i -p 'System: ' "" -width 20 -hide-scrollbar -font "JetBrains Mono Medium 12" \
    -eh 1 -line-padding 4 -padding 10 -no-config -lines 4 -theme gruvdark-logout)

case $question in
    *lock)
        i3lock-arc-dark.sh
        ;;
    *logout)
        session-logout
        ;;
    *reboot)
        systemctl reboot
        ;;
    *shutdown)
        systemctl poweroff
        ;;
    *)
        exit 0  # do nothing on wrong response
        ;;
esac
